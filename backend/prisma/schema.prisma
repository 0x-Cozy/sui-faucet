generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FaucetRequest {
  id            String   @id @default(cuid())
  walletAddress String
  amount        Float    @default(0.1)
  ip            String
  userAgent     String?
  txHash        String?
  success       Boolean  @default(false)
  error         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([walletAddress])
  @@index([ip])
  @@index([createdAt])
}

model RequestHistory {
  id            String   @id @default(cuid())
  walletAddress String
  amount        Float
  source        String   // 'frontend' or 'discord'
  discordUserId String?
  ip            String?
  txHash        String?
  success       Boolean
  error         String?
  rateLimitInfo String?  // JSON as string for SQLite
  createdAt     DateTime @default(now())

  @@index([walletAddress])
  @@index([discordUserId])
  @@index([source])
  @@index([createdAt])
  @@index([success])
}

model DiscordRoleConfig {
  id          String   @id @default(cuid())
  guildId     String   @unique
  adminRoleId String?
  modRoleId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([guildId])
}

model RefundRequest {
  id            String   @id @default(cuid())
  walletAddress String
  amount        Float
  refundedBy    String   // Who made the refund (wallet address or user ID)
  txHash        String?  // Transaction hash of the refund
  createdAt     DateTime @default(now())

  @@index([walletAddress])
  @@index([refundedBy])
  @@index([createdAt])
}

model RateLimit {
  id        String   @id @default(cuid())
  key       String   @unique
  points    Int      @default(0)
  resetTime DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
  @@index([resetTime])
}

model AdminLog {
  id        String   @id @default(cuid())
  action    String
  details   String?  // JSON as string for SQLite
  ip        String?
  createdAt DateTime @default(now())

  @@index([action])
  @@index([createdAt])
}

model ApiApp {
  id            String   @id @default(cuid())
  name          String
  description   String?
  walletAddress String
  apiKey        String   @unique
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  usage ApiUsage[]

  @@index([walletAddress])
  @@index([apiKey])
}

model ApiUsage {
  id        String   @id @default(cuid())
  appId     String
  app       ApiApp   @relation(fields: [appId], references: [id])
  endpoint  String
  ip        String?
  success   Boolean  @default(false)
  error     String?
  createdAt DateTime @default(now())

  @@index([appId])
  @@index([createdAt])
} 